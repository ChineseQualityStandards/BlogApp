<UserControl
    x:Class="BlogApp.Modules.ModuleName.Views.BookEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BlogApp.Modules.ModuleName.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="40"
            Text="{Binding ViewTitle}" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBox
                    x:Name="BookTitle"
                    Grid.Row="0"
                    Height="54"
                    Margin="10"
                    Padding="7"
                    materialDesign:HintAssist.Hint="请输入书名"
                    Background="White"
                    FontFamily="kaiti"
                    FontSize="20"
                    Opacity="0.7"
                    Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Book.Title}" />

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <!--  封面颜色选择器  -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="0" LastChildFill="True">
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Text="封面颜色:" />
                            <TextBlock
                                Width="70"
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Text="{Binding Book.Color, NotifyOnSourceUpdated=True, Mode=TwoWay}" />

                            <Rectangle
                                Height="20"
                                Margin="5"
                                Fill="{Binding Book.Color, NotifyOnSourceUpdated=True, Mode=TwoWay}" />
                        </DockPanel>

                        <materialDesign:ColorPicker
                            x:Name="ColorColorPicker"
                            Grid.Row="1"
                            Margin="5"
                            Color="{Binding Book.Color}" />
                    </Grid>
                    <!--  字体颜色选择器  -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="0" LastChildFill="True">
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Text="字体颜色:" />
                            <TextBlock
                                Width=" 70"
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Text="{Binding Book.Foreground}" />

                            <Rectangle
                                Height="20"
                                Margin="5"
                                Fill="{Binding Book.Foreground}" />
                        </DockPanel>
                        <materialDesign:ColorPicker
                            Grid.Row="1"
                            Margin="5"
                            Color="{Binding Book.Foreground}" />
                    </Grid>
                </Grid>
                <TextBox
                    Grid.Row="2"
                    Margin="10"
                    Padding="7"
                    materialDesign:HintAssist.Hint="请输入描述"
                    AcceptsReturn="True"
                    AllowDrop="True"
                    Background="White"
                    FontFamily="kaiti"
                    FontSize="20"
                    Opacity="0.7"
                    Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Book.Description}" />
            </Grid>
            <!--  书籍预览  -->
            <Grid Grid.Column="1">
                <materialDesign:Card
                    Width="266"
                    Height="386"
                    Margin="15"
                    Padding="1"
                    materialDesign:ElevationAssist.Elevation="Dp24"
                    Background="{Binding Book.Color}"
                    Opacity="0.8">
                    <Button
                        Width="266"
                        Height="386"
                        Style="{DynamicResource MaterialDesignNumericUpDownButtonsStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    FontFamily="Source Han Serif SC Heavy"
                                    FontSize="32"
                                    FontWeight="DemiBold"
                                    Foreground="{Binding Book.Foreground}"
                                    Text="{Binding ElementName=BookTitle, Path=Text, NotifyOnSourceUpdated=True}"
                                    TextWrapping="Wrap"
                                    ToolTip="{Binding ElementName=BookTitle, Path=Text, NotifyOnSourceUpdated=True}" />
                                <Separator Grid.Row="1" />
                                <DockPanel Grid.Row="2" LastChildFill="False">
                                    <TextBlock
                                        DockPanel.Dock="Right"
                                        FontFamily="KaiTi"
                                        FontSize="32"
                                        Foreground="{Binding Book.Foreground}"
                                        Text="  著"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        DockPanel.Dock="Right"
                                        FontFamily="KaiTi"
                                        FontSize="32"
                                        Foreground="{Binding Book.Foreground}"
                                        Text="{Binding Book.Author, Mode=TwoWay, NotifyOnSourceUpdated=True}"
                                        TextWrapping="Wrap" />
                                </DockPanel>

                            </Grid>
                        </Button.Content>
                    </Button>
                </materialDesign:Card>
            </Grid>
        </Grid>


        <DockPanel Grid.Row="2" LastChildFill="True">
            <Button
                Margin="5"
                Command="{Binding DelegateCommand}"
                CommandParameter="Complete"
                Content="完成"
                DockPanel.Dock="Right" />
            <Button
                Margin="5"
                Command="{Binding DelegateCommand}"
                CommandParameter="Cancel"
                Content="取消"
                DockPanel.Dock="Right"
                Style="{DynamicResource MaterialDesignFlatLightBgButton}" />
            <TextBlock
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="Red"
                Text="{Binding ErrorMessage}" />
        </DockPanel>

    </Grid>
</UserControl>
