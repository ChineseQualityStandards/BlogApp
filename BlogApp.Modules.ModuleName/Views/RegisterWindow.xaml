<Window
    x:Class="BlogApp.Modules.ModuleName.Views.RegisterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BlogApp.Modules.ModuleName.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="RegisterWindow"
    Width="400"
    Height="630"
    prism:ViewModelLocator.AutoWireViewModel="True"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <!--#region-->
    <DockPanel LastChildFill="False">


        <DockPanel
            Width="400"
            Background="Transparent"
            DockPanel.Dock="Top"
            LastChildFill="True"
            MouseLeftButtonDown="MouseLeftButtonDown">
            <!--  关闭  -->
            <Button
                Command="{Binding DelegateCommand}"
                CommandParameter="close"
                DockPanel.Dock="Right"
                Foreground="Black"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="关闭窗口">
                <materialDesign:PackIcon Kind="Close" />
            </Button>

            <!--  最小化  -->
            <Button
                Command="{Binding DelegateCommand}"
                CommandParameter="minimize"
                DockPanel.Dock="Right"
                Foreground="Black"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="最小化">
                <materialDesign:PackIcon Kind="Minimize" />
            </Button>
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="32"
                Text="注册新用户" />
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Separator DockPanel.Dock="Top" />
            <TextBox
                x:Name="UserIDTextBox"
                Height="54"
                Margin="10"
                Padding="7"
                materialDesign:HintAssist.Hint="请输入用户邮箱"
                Background="White"
                DockPanel.Dock="Top"
                FontFamily="kaiti"
                FontSize="20"
                Opacity="0.7"
                Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                Text="{Binding User.Email}" />
            <TextBox
                Height="54"
                Margin="10"
                Padding="7"
                materialDesign:HintAssist.Hint="请输入用户名"
                Background="White"
                DockPanel.Dock="Top"
                FontFamily="kaiti"
                FontSize="20"
                Opacity="0.7"
                Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                Text="{Binding User.Name}" />
            <PasswordBox
                x:Name="PasswordBox"
                Height="54"
                Margin="10"
                Padding="7"
                materialDesign:HintAssist.Hint="请输入密码"
                Background="White"
                DockPanel.Dock="Top"
                FontFamily="kaiti"
                FontSize="20"
                LostFocus="PasswordBox_LostFocus"
                Opacity="0.8"
                PasswordChanged="PasswordBox_PasswordChanged"
                Style="{DynamicResource MaterialDesignOutlinedPasswordBox}" />
            <PasswordBox
                x:Name="RePasswordBox"
                Height="54"
                Margin="10"
                Padding="7"
                materialDesign:HintAssist.Hint="请确认密码"
                Background="White"
                DockPanel.Dock="Top"
                FontFamily="kaiti"
                FontSize="20"
                LostFocus="PasswordBox_LostFocus"
                Opacity="0.8"
                PasswordChanged="PasswordBox_PasswordChanged"
                Style="{DynamicResource MaterialDesignOutlinedPasswordBox}" />
            <TextBox
                Height="162"
                Margin="10"
                Padding="7"
                materialDesign:HintAssist.Hint="请输入个性签名"
                AcceptsReturn="True"
                Background="White"
                DockPanel.Dock="Top"
                FontFamily="kaiti"
                FontSize="20"
                Opacity="0.7"
                Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                Text="{Binding User.Signature}" />
            <Button
                x:Name="RegisterButton"
                Height="54"
                Margin="10"
                Command="{Binding RegisterCommand}"
                CommandParameter="{Binding ElementName=PasswordBox}"
                Content="注册用户"
                DockPanel.Dock="Top"
                IsEnabled="False"
                Style="{DynamicResource MaterialDesignFlatMidBgButton}" />
            <TextBlock
                x:Name="ErrorMessage"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DockPanel.Dock="Bottom"
                Foreground="Red"
                Text="{Binding ErrorMessage, Mode=TwoWay, NotifyOnSourceUpdated=True}" />
        </DockPanel>
    </DockPanel>
    <!--#endregion-->
</Window>
