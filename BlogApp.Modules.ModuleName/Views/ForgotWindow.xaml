<Window
    x:Class="BlogApp.Modules.ModuleName.Views.ForgotWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BlogApp.Modules.ModuleName.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="ForgotWindow"
    Width="400"
    Height="445"
    prism:ViewModelLocator.AutoWireViewModel="True"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <DockPanel LastChildFill="False">
        <DockPanel
            Width="400"
            Background="Transparent"
            DockPanel.Dock="Top"
            LastChildFill="True"
            MouseLeftButtonDown="MouseLeftButtonDown">
            <!--  关闭  -->
            <Button
                Command="{Binding DelegateCommand}"
                CommandParameter="close"
                DockPanel.Dock="Right"
                Foreground="Black"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="关闭窗口">
                <materialDesign:PackIcon Kind="Close" />
            </Button>

            <!--  最小化  -->
            <Button
                Command="{Binding DelegateCommand}"
                CommandParameter="minimize"
                DockPanel.Dock="Right"
                Foreground="Black"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="最小化">
                <materialDesign:PackIcon Kind="Minimize" />
            </Button>
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="32"
                Text="找回密码" />
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Separator DockPanel.Dock="Top" />
            <TextBox
                x:Name="EmailTextBox"
                Height="54"
                Margin="10"
                Padding="7"
                materialDesign:HintAssist.Hint="请输入用户邮箱"
                Background="White"
                DockPanel.Dock="Top"
                FontFamily="kaiti"
                FontSize="20"
                Opacity="0.7"
                Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                Text="" />
            <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                <Button
                    Height="54"
                    Margin="10"
                    Content="获取验证码"
                    DockPanel.Dock="Right"
                    Style="{DynamicResource MaterialDesignFlatMidBgButton}" />
                <TextBox
                    Height="54"
                    Margin="10"
                    Padding="7"
                    materialDesign:HintAssist.Hint="请输入验证码"
                    Background="White"
                    DockPanel.Dock="Right"
                    Style="{DynamicResource MaterialDesignOutlinedTextBox}" />
            </DockPanel>
            <PasswordBox
                x:Name="PasswordBox"
                Height="54"
                Margin="10"
                Padding="7"
                materialDesign:HintAssist.Hint="请输入密码"
                Background="White"
                DockPanel.Dock="Top"
                FontFamily="kaiti"
                FontSize="20"
                LostFocus="PasswordBox_LostFocus"
                Opacity="0.8"
                Style="{DynamicResource MaterialDesignOutlinedPasswordBox}" />
            <PasswordBox
                x:Name="RePasswordBox"
                Height="54"
                Margin="10"
                Padding="7"
                materialDesign:HintAssist.Hint="请确认密码"
                Background="White"
                DockPanel.Dock="Top"
                FontFamily="kaiti"
                FontSize="20"
                LostFocus="PasswordBox_LostFocus"
                Opacity="0.8"
                Style="{DynamicResource MaterialDesignOutlinedPasswordBox}" />
            <Button
                x:Name="RegisterButton"
                Height="54"
                Margin="10"
                Command="{Binding ForgotCommand}"
                CommandParameter="{Binding ElementName=PasswordBox}"
                Content="注册用户"
                DockPanel.Dock="Top"
                Style="{DynamicResource MaterialDesignFlatMidBgButton}" />
            <TextBlock
                x:Name="ErrorMessage"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DockPanel.Dock="Bottom"
                Foreground="Red"
                Text="{Binding ErrorMessage}" />
        </DockPanel>
    </DockPanel>
</Window>
