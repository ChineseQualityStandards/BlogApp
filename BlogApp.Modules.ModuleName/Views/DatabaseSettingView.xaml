<UserControl
    x:Class="BlogApp.Modules.ModuleName.Views.DatabaseSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BlogApp.Modules.ModuleName.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid Width="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <CheckBox
                Grid.Column="0"
                Content="SqlSerVer数据库"
                FontSize="18"
                IsChecked="{Binding IsSqlServer}" />
            <CheckBox
                Grid.Column="1"
                Content="MySqlVer数据库"
                FontSize="18"
                IsChecked="{Binding IsMySql}" />
        </Grid>
        <TextBox
            Grid.Row="1"
            Height="54"
            Margin="5"
            Padding="7"
            materialDesign:HintAssist.Hint="数据库地址"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            Opacity="0.7"
            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
            Text="{Binding Server, Mode=TwoWay}" />
        <TextBox
            Grid.Row="2"
            Height="54"
            Margin="5"
            Padding="7"
            materialDesign:HintAssist.Hint="端口号（可选）"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            Opacity="0.7"
            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
            Text="{Binding Port, Mode=TwoWay}" />
        <TextBox
            Grid.Row="3"
            Height="54"
            Margin="5"
            Padding="7"
            materialDesign:HintAssist.Hint="数据库名"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            Opacity="0.7"
            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
            Text="{Binding Database, Mode=TwoWay}" />
        <TextBox
            Grid.Row="4"
            Height="54"
            Margin="5"
            Padding="7"
            materialDesign:HintAssist.Hint="登录账号"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            Opacity="0.7"
            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
            Text="{Binding UserId, Mode=TwoWay}" />
        <PasswordBox
            x:Name="PasswordBox"
            Grid.Row="5"
            Height="54"
            Margin="5"
            Padding="7"
            materialDesign:HintAssist.Hint="登录密码"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            Opacity="0.8"
            Style="{DynamicResource MaterialDesignOutlinedPasswordBox}" />
        <Grid Grid.Row="6" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Height="54"
                Margin="5"
                Command="{Binding TestConnectionCommand}"
                CommandParameter="{Binding ElementName=PasswordBox}"
                Content="验证连接"
                Style="{DynamicResource MaterialDesignFlatMidBgButton}" />
            <Button
                Grid.Column="1"
                Height="54"
                Margin="5"
                Command="{Binding SaveConnectionCommand}"
                CommandParameter="{Binding ElementName=PasswordBox}"
                Content="更新配置"
                Style="{DynamicResource MaterialDesignFlatMidBgButton}" />
        </Grid>
        <TextBlock
            Grid.Row="7"
            Foreground="Blue"
            Text="{Binding Message}"
            ToolTip="{Binding Message}" />
    </Grid>
</UserControl>
